{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@components/*": ["./components/*"],
      "@hooks": ["./hooks"],
      "@utils": ["./utils"],
      "@contracts": ["./contracts"],
      "@redux/*": ["./redux/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext"
  },
  "include": ["./"],
  "exclude": ["node_modules"]
}
